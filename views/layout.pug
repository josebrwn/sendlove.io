doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='theme-color' content='#4DA5F4')
    meta(name='csrf-token', content=_csrf)

    // schema.org 
    meta(itemprop='name', content=title)
    meta(itemprop='description', content=shortDescription)
    meta(itemprop='image', content=imagePath+'?w=800')
    
    // facebook og
    meta(property='og:title' content=title)
    meta(property='og:description' content=shortDescription)
    meta(property='og:image' content=imagePath+'?w=800')
    meta(property='og:image:width' content='400') 
    meta(property='og:image:height' content='300') 

    meta(property='og:place:location:latitude' content=latitude)
    meta(property='og:place:location:longitude' content=longitude)
    
    title #{title} - SendLove I/O
    link(rel='shortcut icon', href='/favicon.png')
    link(rel='stylesheet', href='/css/main.css')

    
    style.
      body {
        font-size: 16px;
      }
  
      h1  { font-size: 22px; color: #464646; }
      h2 { font-size: 20px; }
      h3 { font-size: 18px; }
  
      a { text-decoration: none; }
      a:hover { color: #F76F76; }    
    
    
    
    
    
    
  body
    include partials/header

    .container
      include partials/flash
      block content

    include partials/footer

    script(src='/js/lib/jquery-2.2.4.min.js')
    script(src='/js/lib/bootstrap.min.js')
    script(src='/js/main.js')

